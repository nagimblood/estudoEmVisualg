 var
   a, b, raiz: real
 inicio
   escreval("Insira o valor de a: ")
   leia(a)

   escreval("Insira o valor de b: ")
   leia(b)
   
   se a=0 entao
      se b= 0 entao
         escreval("IR")
      senao
         escreval("A função não tem raiz")
      fimse
   senao
        raiz <- -b/a
        escreval("A raiz da função é ", raiz)
   fimse

 fimalgoritmo
