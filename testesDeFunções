funcao comunismo(ordem: caractere): caractere
var marx: logico
inicio
   se (ordem = "Manifesto Comunista") entao
      marx <- verdadeiro
   senao
      marx <- falso
   fimse
   
   se marx = verdadeiro entao
      retorne ("Aqui é comunismo, caralho")
   senao
      retorne ("Burguês filho da puta")
   fimse
   
fimfuncao

