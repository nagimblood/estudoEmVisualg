algoritmo "Média de aprovação"
// [Fundamentos de Computadação]
// Autor: João Pedro Silva
// Data: 7 de junho de 2023
var
   n1, n2, n3, media: real
inicio

   escreval("Primeira nota do aluno: ")
   leia(n1)
   
   escreval("Segunda nota do aluno: ")
   leia(n2)
   
   escreval("Terceira nota do aluno: ")
   leia(n3)
   
   media <- (n1 + n2 + n3)/3
   
   se media >=7 entao
      escreval("Aluno aprovado por média (", media:2:2, "/10).")
   senao
      escreval("Aluno reprovado por média (", media:2:2, "/10) insuficiente.")
   fimse

fimalgoritmo
