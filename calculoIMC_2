Algoritmo "CÃ¡lculo de IMC"
Var

   IMC, m, a: real


Inicio

   escreva("Digite seu peso: ")
   leia(m)

   escreval
   escreva("Digite sua altura: ")
   leia(a)

   IMC <- m/(a*a)

   se (IMC < 16) entao
      escreval("Status: Magreza grau III")
   senao
      se(IMC < 17) entao
         escreval("Status: Magreza grau II")
      senao
         se(IMC < 18.5) entao
            escreval("Status: Magreza grau I")
         senao
            se(IMC < 25) entao
               escreval("Status: Normal")
            senao
               se(IMC < 30) entao
                  escreval("Status: Sobrepeso")
               senao
                  se(IMC < 35) entao
                     escreval("Status: Obesidade grau I")
                  senao
                     se(IMC < 40) entao
                        escreval("Status: Obesidade grau II")
                     senao
                        escreval("Status: Obesidade grau III")
                     fimse
                  fimse
               fimse
            fimse
         fimse
      fimse
   fimse
Fimalgoritmo
